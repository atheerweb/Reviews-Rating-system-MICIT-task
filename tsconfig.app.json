{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*",
    "src/**/*.vue",
    "features/product/components/ProductCard.vue",
    "features/product/components/ProductData.vue",
    "features/reviews/components/ProductReviewForm.vue",
    "features/reviews/components/AppReviews.vue"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vue3-toastify/global"]
  }
}
